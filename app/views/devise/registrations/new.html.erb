<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true, class: 'form-control' %></p>

  <p><%= f.label :email %><br />
  <%= f.email_field :email, class: 'form-control' %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, class: 'form-control' %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: 'form-control' %></p>

  <p><%= f.submit "Sign up", class: 'btn btn-default' %></p>
<% end %>

<%= render "devise/shared/links" %>
