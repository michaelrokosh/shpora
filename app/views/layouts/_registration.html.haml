= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    .input-group
      %span.input-group-addon
        %i.fa.fa-user
      = f.text_field :username, placeholder: 'Имя пользователя', class: 'form-control'
  %p
    .input-group
      %span.input-group-addon
        %i.fa.fa-envelope-o
      = f.email_field :email, placeholder: 'Email', class: 'form-control'
  %p
    .input-group
      %span.input-group-addon
        %i.fa.fa-key
      = f.password_field :password, placeholder: t('activerecord.attributes.user.password'), class: 'form-control'
  %p
    - flash.each do |_, value|
      .alert.alert-error
        %small= value
  %p= f.submit 'Зарегистрироватся', class: 'btn btn-default'
